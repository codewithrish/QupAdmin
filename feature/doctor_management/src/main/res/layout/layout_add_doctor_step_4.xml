<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/lbl_accolades"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Accolades"
        android:textStyle="bold"
        android:padding="4dp"
        android:background="?attr/colorSurfaceVariant"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_accolades"
        android:layout_width="0dp"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_accolades" />

    <TextView
        android:id="@+id/lbl_medical_achievements"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medical Achievements"
        android:textStyle="bold"
        android:padding="4dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_accolades"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_medical_achievements"
        android:layout_width="0dp"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_medical_achievements" />

    <TextView
        android:id="@+id/lbl_non_medical_achievements"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Non-Medical Achievements"
        android:textStyle="bold"
        android:padding="4dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_medical_achievements"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_non_medical_achievements"
        android:layout_width="0dp"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_non_medical_achievements" />

</androidx.constraintlayout.widget.ConstraintLayout>